@model IEnumerable<AppApi.Model.BackGround>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BackGround_Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.BackGround_Image != null)
                    {
                        <img src="data:image/png;base64,@item.BackGround_Image" alt="Image" style="max-width:200px; max-height:200px;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id_BackGroud">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id_BackGroud">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id_BackGroud">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
